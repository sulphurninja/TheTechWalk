<div class="col-8">

  <form action="/admin" enctype="multipart/form-data" method="POST">
  
    <div class="row g-3">


      <div class="col-12">
       <label for="name" class="form-label" > Post Title </label>
        <input type="text" name="name" id="name" class="form-control" required>
      </div>
      
      <div class="col-12">
        <label for="description" class="form-label">Description - Content</label>
        <textarea name="description" id="description" class="form-control" cols="50" rows="20"></textarea>
      </div>

  

 

      <div class="col-12">
        <label for="category">Select Category</label>
        <select class="form-select form-control" name="category" aria-label="category">
          <option selected>Select Category</option>
          <option value="editorialFeatured">Featured</option>
          <option value="SoftwareFeatured">SoftwareFeatured</option>
          <option value="Maharashtra">Maharashtra</option>
          <option value="Technology">Technology</option>
          <option value="National">National</option>
            <option value="Editorial">Editorial</option>
            <option value="Sports">Sports</option>
            <option value="World">World</option>
        
        </select>
      </div>

      <div class="col-12">
        <label for="image">Image</label>
        <input type="file" class="form-control" name="image" accept="image/*"/>
      </div>
      <div class="col-12">
          <label for="document">Document</label>
          <input type = "file" class="form-control" name="file" />
          <input type="submit" class="btn btn-secondary" value="Upload"/>


      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit The Post</button>
      </div>

    </div>
  
  </form>

